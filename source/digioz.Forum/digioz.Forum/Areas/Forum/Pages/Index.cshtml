@page
@model digioz.Forum.Areas.Forum.Pages.IndexModel
@using digioz.Forum.Services
@using digioz.Forum.Services.Interfaces
@inject ILayoutService LayoutService

@{
    ViewData["Title"] = "Forum Index";
    // Layout is set in Areas/Forum/Pages/_ViewStart.cshtml

    var layoutModel = LayoutService.GetLayoutData();
    var partialPath = $"~/Areas/Forum/Pages/Shared/Styles/{layoutModel.ForumStyle.StyleName}/_IndexPagePartial.cshtml";
}

@await Html.PartialAsync(partialPath, Model)
