@page
@model digioz.Forum.Areas.Forum.Pages.IndexModel
@{
    ViewData["Title"] = "Forum Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div id="page-body" class="page-body" role="main">
    <p class="right responsive-center time">It is currently @DateTime.Now</p>
    <div class="forabg">
        <div class="inner">
            @{
                var categories = Model.ForumList.Where(x => x.ForumType == 0).ToList();

                foreach (var category in categories)
                {
                    <ul class="topiclist">
                        <li class="header">
                            <dl class="row-item">
                                <dt>
                                    <div class="list-inner"><a href="/Forum/Forum?f=@category.ForumId">@category.ForumName</a></div>
                                </dt>
                                <dd class="topics">Topics</dd>
                                <dd class="posts">Posts</dd>
                                <dd class="lastpost"><span>Last post</span></dd>
                            </dl>
                        </li>
                    </ul>

                    var forums = Model.ForumList.Where(x => x.ForumType == 1 && x.ParentId == category.ForumId).ToList();

                    foreach (var forum in forums)
                    {
                        <ul class="topiclist forums">
                            <li class="row">
                                <dl class="row-item forum_read">
                                    <dt title="No unread posts">
                                        <div class="list-inner">
                                            <a href="/Forum/Forum?f=@forum.ForumId" class="forumtitle">@forum.ForumName</a>
                                            <br />@forum.ForumDesc
                                            <div class="responsive-show" style="display: none;">
                                                Topics: <strong>@forum.ForumTopicsApproved</strong>
                                            </div>
                                        </div>
                                    </dt>
                                    <dd class="topics">@forum.ForumTopicsApproved <dfn>Topics</dfn></dd>
                                    <dd class="posts">@forum.ForumPostsApproved <dfn>Posts</dfn></dd>
                                    <dd class="lastpost">
                                        <span>
                                            <dfn>Last post</dfn>
                                            <a href="/Forum/Topic?p=@forum.ForumLastPostId#p@forum.ForumLastPostId" title="@forum.ForumLastPostSubject" class="lastsubject">@forum.ForumLastPostSubject</a> <br />
                                            by <a href="/Forum/Members?mode=viewprofile&amp;u=@forum.ForumLastPosterId" style="color: @forum.ForumLastPosterColour;" class="username-coloured">@forum.ForumLastPosterName</a>
                                            <a href="/Forum/Topic?p=@forum.ForumLastPostId#p@forum.ForumLastPostId" title="View the latest post">
                                                <i class="icon fa-external-link-square fa-fw icon-lightgray icon-md" aria-hidden="true"></i><span class="sr-only">View the latest post</span>
                                            </a>
                                            <br /><time datetime="@forum.ForumLastPostTime">@forum.ForumLastPostTime</time>
                                        </span>
                                    </dd>
                                </dl>
                            </li>
                        </ul>
                    }
                }
            }
        </div>
    </div>
    @if (!User.Identity.IsAuthenticated)
    {
        @await Component.InvokeAsync("LoginBox")
    }

    @await Component.InvokeAsync("WhoIsOnline")

    <div class="stat-block statistics">
        <h3>Statistics</h3>
        <p>
            Total posts <strong>@Model.ForumList.Sum(f => f.ForumPostsApproved)</strong> &bull; Total topics <strong>@Model.ForumList.Sum(f => f.ForumTopicsApproved)</strong> &bull; Total members <strong>1</strong> &bull; Our newest member <strong><a href="/Forum/Members?mode=viewprofile&amp;u=2" style="color: #AA0000;" class="username-coloured">admin</a></strong>
        </p>
    </div>
</div>
