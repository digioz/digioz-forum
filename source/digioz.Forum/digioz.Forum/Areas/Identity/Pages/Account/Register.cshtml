@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Areas/Forum/Pages/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<div class="panel">
    <div class="inner">
        <div class="content">
            <h2 class="login-title">@ViewData["Title"]</h2>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="error" role="alert"></div>
                <fieldset class="fields1">
                    <dl>
                        <dt><label asp-for="Input.ForumUserName">UserName</label></dt>
                        <dd>
                            <input asp-for="Input.ForumUserName" class="form-control" autocomplete="email" aria-required="true" placeholder="" />
                            <span asp-validation-for="Input.ForumUserName" class="error"></span>
                        </dd>
                    </dl>
                    <dl>
                        <dt><label asp-for="Input.Email">Email</label></dt>
                        <dd>
                            <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" placeholder="" />
                            <span asp-validation-for="Input.Email" class="error"></span>
                        </dd>
                    </dl>

                    <dl>
                        <dt><label asp-for="Input.Password">Password</label></dt>
                        <dd>
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="" />
                            <span asp-validation-for="Input.Password" class="error"></span>
                        </dd>
                    </dl>
                    <dl>
                        <dt><label asp-for="Input.ConfirmPassword">Confirm Password</label></dt>
                        <dd>
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="" />
                            <span asp-validation-for="Input.ConfirmPassword" class="error"></span>
                        </dd>
                    </dl>

                    <dl>
                        <dt>&nbsp;</dt>
                        <dd>
                            <input id="registerSubmit" type="submit" class="button1" value="Register">
                        </dd>
                    </dl>
                </fieldset>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
